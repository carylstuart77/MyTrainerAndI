<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_alignParentTop="true"
  android:layout_alignParentStart="true">

  <TextView
    android:id="@+id/textView8"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:text="Trainer's Master Plan"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="@android:color/holo_blue_dark"
    android:textSize="24sp"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


  <LinearLayout
    android:id="@+id/buttonLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp"
    app:layout_constraintTop_toBottomOf="@+id/textView8"
    android:weightSum="1">
    <Button
      android:id="@+id/radiolower"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/lowerbody"
      android:button="@drawable/add_steel_button_48x48"
      android:text="Lower Body"
      android:textColor="@android:color/white"
      android:textColorHighlight="@android:color/background_light"
      android:textSize="24sp"/>
    <Button
      android:id="@+id/radioupper"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_weight="0.72"
      android:layout_margin="8dp"
      android:background="@drawable/older_wom_fit2"
      android:button="@drawable/add_steel_button_48x48"
      android:checked="false"
      android:text="Upper Body"
      android:textAlignment="center"
      android:textColor="@android:color/white"
      android:textSize="24sp"/>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/buttonLayout2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp"
    app:layout_constraintTop_toBottomOf="@id/buttonLayout">
    <Button
      android:id="@+id/radiocardio"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/runner"
      android:button="@drawable/add_steel_button_48x48"
      android:text="Cardio"
      android:textColor="@android:color/white"
      android:textSize="24sp"/>
    <Button
      android:id="@+id/radioabs"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/abs_wm"
      android:button="@drawable/add_steel_button_48x48"
      android:text="Abs"
      android:textColor="@android:color/white"
      android:textSize="24sp"/>

  </LinearLayout>

  <ListView
    android:id="@+id/listViewTrainer3"
    android:layout_width="367dp"
    android:layout_height="249dp"
    android:layout_margin="8dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.529"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonLayout2"
    app:layout_constraintVertical_bias="0.0"
    />
  <Button
    android:id="@+id/btnSaveTrainer"
    android:layout_width="155dp"
    android:layout_height="31dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="92dp"
    android:background="@drawable/save_button"
    android:fontFamily="monospace"
    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="1.0"/>
  <CheckBox
    android:id="@+id/cbMon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="37dp"
    android:text="Mon"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="1dp"/>
  <CheckBox
    android:id="@+id/cbTue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Tue"
    app:layout_constraintLeft_toRightOf="@+id/cbMon"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>
  <CheckBox
    android:id="@+id/cbWed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Wed"
    app:layout_constraintLeft_toRightOf="@+id/cbTue"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>
  <CheckBox
    android:id="@+id/cbThu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Thu"
    app:layout_constraintLeft_toRightOf="@+id/cbWed"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>
  <CheckBox
    android:id="@+id/cbFri"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Fri"
    app:layout_constraintLeft_toRightOf="@+id/cbThu"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>
  <CheckBox
    android:id="@+id/cbSat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Sat"
    app:layout_constraintLeft_toRightOf="@+id/cbFri"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>
  <CheckBox
    android:id="@+id/cbSun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:text="Sun"
    app:layout_constraintLeft_toRightOf="@+id/cbSat"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="37dp"/>

</android.support.constraint.ConstraintLayout>