<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_alignParentTop="true"
  android:layout_alignParentStart="true">

  <TextView
    android:id="@+id/textView8"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:text="Trainer's Master Plan"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="@android:color/holo_blue_dark"
    android:textSize="24sp"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>



    <Button
      android:id="@+id/radiolower"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/lowerbody"
      android:text="Lower Body"
      android:textColor="@android:color/white"
      android:textColorHighlight="@android:color/background_light"
      android:textSize="24sp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/textView8"
      app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
      android:id="@+id/radioupper"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/older_wom_fit2"
      android:checked="false"
      android:text="Upper Body"
      android:textAlignment="center"
      android:textColor="@android:color/white"
      android:textSize="24sp"
      app:layout_constraintLeft_toRightOf="@+id/radiolower"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/textView8"/>

    <Button
      android:id="@+id/radiocardio"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/runner"
      android:text="Cardio"
      android:textColor="@android:color/white"
      android:textSize="24sp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/radiolower"
      app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
      android:id="@+id/radioabs"
      android:layout_width="166dp"
      android:layout_height="62dp"
      android:layout_margin="8dp"
      android:background="@drawable/abs_wm"
      android:text="Core"
      android:textColor="@android:color/white"
      android:textSize="24sp"
      app:layout_constraintLeft_toRightOf="@+id/radiocardio"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/radioupper"/>

  <Button
    android:id="@+id/btnSaveTrainer"
    android:layout_width="133dp"
    android:layout_height="70dp"
    android:text="Save"
    android:layout_margin="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="92dp"
    android:textSize="22sp"
    android:textColor="@android:color/white"
    android:background="@drawable/blue_pill_btn"
    android:fontFamily="monospace"
    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="92dp"/>
  <Button
    android:id="@+id/btnResetTrainer"
    android:layout_width="133dp"
    android:layout_height="70dp"
    android:text="Reset"
    android:layout_margin="8dp"
    android:layout_marginLeft="8dp"
    android:textSize="22sp"
    android:textColor="@android:color/white"
    android:background="@drawable/blue_pill_btn"
    android:fontFamily="monospace"
    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/btnSaveTrainer"
    app:layout_constraintHorizontal_bias="1.0"
    android:layout_marginStart="8dp"
    />

  <RadioGroup
    android:id="@+id/radiotrainergroup"
    android:layout_width="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toTopOf="@+id/btnSaveTrainer"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/listViewTrainer3"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/radioSat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="37dp"
      android:layout_marginLeft="0dp"
      android:text="Sat"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioFri"/>
    <RadioButton
      android:id="@+id/radioSun"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="37dp"
      android:layout_marginLeft="0dp"
      android:text="Sun"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioSat"/>

    <RadioButton
      android:id="@+id/radioMon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginLeft="0dp"
      android:text="Mon"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>
    <RadioButton
      android:id="@+id/radioTue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginLeft="0dp"
      android:text="Tue"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioMon"/>

    <RadioButton
      android:id="@+id/radioWed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginLeft="-1dp"
      android:text="Wed"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioTue"/>

    <RadioButton
      android:id="@+id/radioThu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginLeft="0dp"
      android:text="Thu"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioWed"/>

    <RadioButton
      android:id="@+id/radioFri"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:text="Fri"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/radioThu"/>
  </RadioGroup>
  <ListView
    android:id="@+id/listViewTrainer3"
    android:layout_width="0dp"
    android:layout_margin="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintBottom_toTopOf="@+id/radiotrainergroup"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioabs"
    android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>