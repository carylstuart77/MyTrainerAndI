<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="false">

    <Spinner
      android:id="@+id/trainer_goal"
      android:layout_width="160dp"
      android:layout_height="39dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:background="@android:drawable/btn_dropdown"
      android:entries="@array/goal_arrays"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toRightOf="@+id/textView10"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView8"
      android:layout_marginRight="8dp"
      android:layout_marginEnd="8dp"/>
    <TextView
      android:id="@+id/textView8"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:text="Trainer's Master Plan"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textSize="18sp"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/textView10"
      android:layout_width="174dp"
      android:layout_height="29dp"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:gravity="bottom"
      android:text="Training Goal:"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textSize="18sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <CheckBox
      android:id="@+id/cb_upper"
      android:layout_width="170dp"
      android:layout_height="64dp"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/older_wom_fit2"
      android:checked="false"
      android:fadingEdge="horizontal"
      android:text="Upper Body"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/textView10"/>

    <CheckBox
      android:id="@+id/cb_lower"
      android:layout_width="170dp"
      android:layout_height="70dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@drawable/male_fem_fit"
      android:text="Lower Body"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/background_light"
      android:textSize="30sp"
      app:layout_constraintLeft_toRightOf="@+id/cb_upper"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/trainer_goal"/>
    <CheckBox
      android:id="@+id/cb_abs"
      android:layout_width="168dp"
      android:layout_height="63dp"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="16dp"
      android:background="@drawable/abs_wm"
      android:text="Abs"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cb_upper"/>
    <CheckBox
      android:id="@+id/cb_cardio"
      android:layout_width="183dp"
      android:layout_height="67dp"
      android:background="@drawable/runner"
      android:text="Cardio"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/cb_lower"
      android:layout_marginBottom="0dp"
      app:layout_constraintBottom_toTopOf="@+id/listViewTrainer3"
      android:layout_marginRight="0dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/cb_abs"
      android:layout_marginLeft="0dp"
      app:layout_constraintHorizontal_bias="0.588"
      app:layout_constraintVertical_bias="0.0"
      />


    <ListView
      android:id="@+id/listViewTrainer3"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/cb_abs"
      app:layout_constraintVertical_bias="1.0"/>

  </android.support.constraint.ConstraintLayout>

</RelativeLayout>