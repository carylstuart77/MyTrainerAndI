<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  tools:context=".Client4">

  <TextView
    android:id="@+id/textTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="19dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="Track Your Body"
    android:textAlignment="center"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

  <EditText
    android:id="@+id/editClientName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="First and Last"
    android:textAlignment="textStart"
    android:layout_marginTop="24dp"
    android:layout_below="@+id/textTitle"
    android:layout_alignEnd="@+id/btnViewClient"
    android:layout_toEndOf="@+id/textClientHeight"/>

  <EditText
    android:id="@+id/editClientHeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editClientName"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:hint="Inches"
    android:inputType="numberDecimal"
    android:textAlignment="textStart"
    android:layout_toStartOf="@+id/btnViewClient"/>

  <EditText
    android:id="@+id/editClientWeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editClientHeight"
    android:layout_alignStart="@+id/editClientHeight"
    android:layout_below="@+id/editClientHeight"
    android:layout_toEndOf="@+id/textClientHeight"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:hint="lbs"
    android:inputType="numberDecimal"
    android:textAlignment="textStart"/>
  <EditText
    android:id="@+id/editClientBMI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editClientWeight"
    android:layout_alignStart="@+id/editClientWeight"
    android:layout_below="@+id/editClientWeight"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:hint="BMI"
    android:inputType="numberDecimal"/>
  <EditText
    android:id="@+id/editClientFat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editClientBMI"
    android:layout_alignStart="@+id/editClientBMI"
    android:layout_below="@+id/editClientBMI"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:hint="%"
    android:inputType="numberDecimal"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/linearLayout"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/editClientFat"
    android:layout_alignParentStart="true">
  </LinearLayout>


  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@android:color/holo_red_dark"
    android:text="Select Training Goal:"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:textColor="@android:color/background_light"
    android:layout_below="@+id/linearLayout"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@+id/spinnerGoal"/>

  <Spinner
    android:id="@+id/spinnerGoal"
    android:layout_width="20dp"
    android:layout_height="wrap_content"
    android:prompt="@string/goal_prompt"
    android:entries="@array/goal_arrays"
    android:layout_below="@+id/linearLayout"
    android:layout_alignEnd="@+id/btnViewClient"
    android:layout_toEndOf="@+id/textView4"/>

  <Button
    android:id="@+id/btnSaveClient"
    android:layout_width="130dp"
    android:layout_height="70dp"
    android:layout_marginBottom="32dp"
    android:layout_marginStart="27dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/blue_pill_btn"
    android:text="SAVE"
    android:textColor="@android:color/background_light"
    android:textColorLink="@color/colorPrimary"
    android:textSize="32sp"/>
  <TextView
    android:id="@+id/textClientName1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/editClientHeight"
    android:layout_alignParentStart="true"
    android:layout_alignTop="@+id/editClientName"
    android:layout_toStartOf="@+id/spinnerGoal"
    android:gravity="left|center"
    android:text="Name:"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/textClientHeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editClientHeight"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textClientName1"
    android:layout_toStartOf="@+id/editClientHeight"
    android:gravity="left|center"
    android:text="Height:"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/textClientWeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editClientWeight"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editClientHeight"
    android:layout_toStartOf="@+id/editClientHeight"
    android:gravity="left|center"
    android:text="Weight:"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/textClientBMI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editClientBMI"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textClientWeight"
    android:layout_toStartOf="@+id/editClientWeight"
    android:gravity="left|center"
    android:text="Body Mass Index:"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/textClientFat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editClientFat"
    android:layout_alignEnd="@+id/textClientBMI"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editClientBMI"
    android:layout_toStartOf="@+id/editClientBMI"
    android:gravity="left|center"
    android:text="Body Fat:"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="18sp"/>
  <Button
    android:id="@+id/btnViewClient"
    android:layout_width="130dp"
    android:layout_height="70dp"
    android:layout_alignBottom="@+id/btnSaveClient"
    android:layout_alignEnd="@+id/textTitle"
    android:layout_alignTop="@+id/btnSaveClient"
    android:background="@drawable/blue_pill_btn"
    android:text="Graph"
    android:textColor="@android:color/background_light"
    android:textSize="32sp"/>


</RelativeLayout>